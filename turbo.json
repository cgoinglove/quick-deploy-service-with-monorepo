{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [
        "dist/**",
        ".next/**",
        "!.next/cache/**",
        "storybook-static/**"
      ]
    },
    "test": {
      "cache": false,
      "dependsOn": ["@repo/load-global-env#build"],
      "outputs": ["dist/**"]
    },
    "test:watch": {
      "cache": false,
      "dependsOn": ["@repo/load-global-env#build"],
      "outputs": ["dist/**"]
    },
    "start": {},
    "lint": {},
    "type-check": {},
    "dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["@repo/load-global-env#build"],
      "outputs": ["dist/**"]
    }
  }
}
